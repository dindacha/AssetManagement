@page
@model AssetManagement.Areas.Assets.Pages.Manage.IndexModel

<h1>Assets</h1>

<form method="get" class="row g-2 mb-3">
  <div class="col-auto">
    <select asp-for="FilterTypeId" asp-items="Model.AssetTypes" class="form-select">
      <option value="">-- Semua Jenis --</option>
    </select>
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-outline-secondary">Filter</button>
  </div>
  <div class="col-auto ms-auto">
    <a asp-area="Assets" asp-page="Create" class="btn btn-primary">Tambah Asset</a>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Tipe</th>
      <th>Cluster</th>
      <th>Kategori</th>
      <th>Desa</th>
      <th>Cost Center</th>
      <th>SAP</th>
      <th>Luas (mÂ²)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var a in Model.Items)
  {
    <tr>
      <td>@a.Id</td>
      <td>@a.Type</td>
      <td>@a.Cluster</td>
      <td>@a.Category</td>
      <td>@a.Village</td>
      <td>@a.CostCenter</td>
      <td>@a.SapNumber</td>
      <td>@(a.AreaM2?.ToString("N0"))</td>
      <td class="text-nowrap">
        <a asp-area="Assets" asp-page="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-secondary">Details</a>
        <a asp-area="Assets" asp-page="Edit"    asp-route-id="@a.Id" class="btn btn-sm btn-outline-primary">Edit</a>
        <a asp-area="Assets" asp-page="Delete"  asp-route-id="@a.Id" class="btn btn-sm btn-outline-danger">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>
