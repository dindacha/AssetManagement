@page "{id:int}"
@model AssetManagement.Areas.Assets.Pages.Manage.DetailsModel
@using System.Globalization
@{
    var id = CultureInfo.GetCultureInfo("id-ID");
}


<h3>Detail Asset #@Model.AssetItem!.Id</h3>

<table class="table table-bordered">
  <tbody>
    <tr><th>Jenis</th><td>@Model.AssetItem.ZRef_AssetType.Name</td></tr>
    <tr><th>Cluster</th><td>@Model.AssetItem.ZRef_AssetCluster.Name</td></tr>
    <tr><th>Kategori</th><td>@Model.AssetItem.ZRef_AssetCategory.Name</td></tr>
    <tr><th>Desa</th><td>@Model.AssetItem.Reg_VillageCodeNavigation.Name</td></tr>
    <tr><th>Cost Center</th><td>@Model.AssetItem.CostCenter</td></tr>
    <tr><th>Availability</th><td>@Model.AssetItem.ZRef_AssetAvailability.Name</td></tr>
    <tr><th>Ownership</th><td>@Model.AssetItem.ZRef_OwnershipType.Name</td></tr>
    <tr><th>SAP</th><td>@Model.AssetItem.SAP_Number</td></tr>
    <tr><th>Deskripsi</th><td>@Model.AssetItem.Description</td></tr>
  </tbody>
</table>

@if (Model.AssetItem.ZRef_AssetTypeId == 1)
{
  <h5>Detail Tanah</h5>
  <table class="table table-striped">
    <tbody>
      <tr><th>Luas (mÂ²)</th><td>@Model.Land?.SurfaceArea</td></tr>
      <tr><th>Jenis Alas Hak</th><td>@Model.Land?.ZRef_RightsTypeId</td></tr>
      <tr><th>No Hak</th><td>@Model.Land?.RightsNumber</td></tr>
      <tr><th>NOP</th><td>@Model.Land?.TaxObjectNumber</td></tr>

      <tr><th>NJOP</th>
      <td>@(Model.Land?.Value_NJOP is decimal njop 
            ? njop.ToString("N0", id) 
            : "-")</td>
      </tr>
      <tr><th>Nilai SAP</th>
          <td>@(Model.Land?.Value_SAP is decimal sap 
                ? sap.ToString("N0", id) 
                : "-")</td>
      </tr>


      <tr><th>Nilai Appraisal KJPP</th><td>@Model.Land?.Value_AppraisalKJPP</td></tr>
    </tbody>
  </table>
}

<div class="mt-3">
  <a asp-page="Edit" asp-route-id="@Model.AssetItem.Id" class="btn btn-primary">Edit</a>
  <a asp-page="Index" class="btn btn-secondary">Back</a>
</div>
