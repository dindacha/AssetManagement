@page "{id:int}"
@model AssetManagement.Areas.Assets.Pages.Manage.DetailsModel

<h1>Asset Details</h1>

<dl class="row">
  <dt class="col-sm-2">Id</dt>
  <dd class="col-sm-10">@Model.Asset!.Id</dd>

  <dt class="col-sm-2">Type</dt>
  <dd class="col-sm-10">@Model.Asset!.ZrefAssetType?.Name</dd>

  <dt class="col-sm-2">Category</dt>
  <dd class="col-sm-10">@Model.Asset!.ZrefAssetCategory?.Name</dd>

  <dt class="col-sm-2">Cluster</dt>
  <dd class="col-sm-10">@Model.Asset!.ZrefAssetCluster?.Name</dd>

  <dt class="col-sm-2">Ownership</dt>
  <dd class="col-sm-10">@Model.Asset!.ZrefOwnershipType?.Name</dd>

  <dt class="col-sm-2">Province</dt>
  <dd class="col-sm-10">@Model.Asset!.RegProvince?.Name</dd>

  <dt class="col-sm-2">Regency</dt>
  <dd class="col-sm-10">@Model.Asset!.RegRegency?.Name</dd>

  <dt class="col-sm-2">District</dt>
  <dd class="col-sm-10">@Model.Asset!.RegDistrict?.Name</dd>

  <dt class="col-sm-2">Owner</dt>
  <dd class="col-sm-10">@Model.Asset!.OwnerName</dd>

  <dt class="col-sm-2">Book Value</dt>
  <dd class="col-sm-10">@Model.Asset!.ValueBook.ToString("N2")</dd>
</dl>

<p>
  <a asp-area="Assets" asp-page="Edit" asp-route-id="@Model.Asset!.Id" class="btn btn-primary">Edit</a>
  <a asp-area="Assets" asp-page="Index" class="btn btn-secondary">Back</a>
</p>