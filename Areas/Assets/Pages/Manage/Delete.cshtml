<p>Yakin mau menghapus data berikut?</p>

<dl class="row">
  <dt class="col-sm-3">Id</dt><dd class="col-sm-9">@Model.Item.Id</dd>
  <dt class="col-sm-3">Jenis</dt><dd class="col-sm-9">@Model.Item.Type</dd>
  <dt class="col-sm-3">Cluster</dt><dd class="col-sm-9">@Model.Item.Cluster</dd>
  <dt class="col-sm-3">Kategori</dt><dd class="col-sm-9">@Model.Item.Category</dd>
  <dt class="col-sm-3">Desa</dt><dd class="col-sm-9">@Model.Item.Village</dd>
  <dt class="col-sm-3">Cost Center</dt><dd class="col-sm-9">@Model.Item.CostCenter</dd>
  <dt class="col-sm-3">SAP</dt><dd class="col-sm-9">@Model.Item.SapNumber</dd>
  <dt class="col-sm-3">Luas (mÂ²)</dt><dd class="col-sm-9">@Model.Item.AreaM2</dd>
</dl>

<form method="post">
  <input type="hidden" name="id" value="@Model.Item.Id" />
  <button type="submit" class="btn btn-danger">Hapus</button>
