@page
@model AssetManagement.Areas.Assets.Pages.Manage.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Create Asset</h1>

<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="row">
    <div class="col-md-6">

      <div class="mb-3">
        <label asp-for="Asset.ZrefAssetTypeId"></label>
        <select asp-for="Asset.ZrefAssetTypeId" asp-items="ViewBag.ZrefAssetTypeId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefAssetTypeId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ZrefAssetCategoryId"></label>
        <select asp-for="Asset.ZrefAssetCategoryId" asp-items="ViewBag.ZrefAssetCategoryId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefAssetCategoryId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ZrefAssetClusterId"></label>
        <select asp-for="Asset.ZrefAssetClusterId" asp-items="ViewBag.ZrefAssetClusterId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefAssetClusterId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ZrefOwnershipTypeId"></label>
        <select asp-for="Asset.ZrefOwnershipTypeId" asp-items="ViewBag.ZrefOwnershipTypeId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefOwnershipTypeId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ZrefCertificateStatusId"></label>
        <select asp-for="Asset.ZrefCertificateStatusId" asp-items="ViewBag.ZrefCertificateStatusId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefCertificateStatusId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ZrefRightsTypeId"></label>
        <select asp-for="Asset.ZrefRightsTypeId" asp-items="ViewBag.ZrefRightsTypeId" class="form-control"></select>
        <span asp-validation-for="Asset.ZrefRightsTypeId" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Asset.RegProvinceId"></label>
        <select asp-for="Asset.RegProvinceId" asp-items="ViewBag.RegProvinceId" class="form-control"></select>
        <span asp-validation-for="Asset.RegProvinceId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.RegRegencyId"></label>
        <select asp-for="Asset.RegRegencyId" asp-items="ViewBag.RegRegencyId" class="form-control"></select>
        <span asp-validation-for="Asset.RegRegencyId" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.RegDistrictId"></label>
        <select asp-for="Asset.RegDistrictId" asp-items="ViewBag.RegDistrictId" class="form-control"></select>
        <span asp-validation-for="Asset.RegDistrictId" class="text-danger"></span>
      </div>

      <!-- Wajib teks/angka/tanggal -->
      <div class="mb-3">
        <label asp-for="Asset.CostCenter"></label>
        <input asp-for="Asset.CostCenter" class="form-control" />
        <span asp-validation-for="Asset.CostCenter" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.Village"></label>
        <input asp-for="Asset.Village" class="form-control" />
        <span asp-validation-for="Asset.Village" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.Description"></label>
        <textarea asp-for="Asset.Description" class="form-control"></textarea>
        <span asp-validation-for="Asset.Description" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.OwnerName"></label>
        <input asp-for="Asset.OwnerName" class="form-control" />
        <span asp-validation-for="Asset.OwnerName" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.DocumentNumber"></label>
        <input asp-for="Asset.DocumentNumber" class="form-control" />
        <span asp-validation-for="Asset.DocumentNumber" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.CertificateNumber"></label>
        <input asp-for="Asset.CertificateNumber" class="form-control" />
        <span asp-validation-for="Asset.CertificateNumber" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Asset.SurfaceArea"></label>
        <input asp-for="Asset.SurfaceArea" type="number" class="form-control" />
        <span asp-validation-for="Asset.SurfaceArea" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.CertificateIssueDate"></label>
        <input asp-for="Asset.CertificateIssueDate" type="date" class="form-control" />
        <span asp-validation-for="Asset.CertificateIssueDate" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.CertificateExpiryDate"></label>
        <input asp-for="Asset.CertificateExpiryDate" type="date" class="form-control" />
        <span asp-validation-for="Asset.CertificateExpiryDate" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Asset.RightsNumber"></label>
        <input asp-for="Asset.RightsNumber" class="form-control" />
        <span asp-validation-for="Asset.RightsNumber" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.TaxObjectNumber"></label>
        <input asp-for="Asset.TaxObjectNumber" class="form-control" />
        <span asp-validation-for="Asset.TaxObjectNumber" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Asset.ValueNjop"></label>
        <input asp-for="Asset.ValueNjop" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Asset.ValueNjop" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ValueAcquisition"></label>
        <input asp-for="Asset.ValueAcquisition" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Asset.ValueAcquisition" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Asset.ValueBook"></label>
        <input asp-for="Asset.ValueBook" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Asset.ValueBook" class="text-danger"></span>
      </div>

    </div>
  </div>

  <button class="btn btn-primary" type="submit">Save</button>
  <a asp-area="Assets" asp-page="/Manage/Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
